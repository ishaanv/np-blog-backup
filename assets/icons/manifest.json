      "sizes": "48x48",
      "type": "image/png",
      "density": 1
    },{
      "src": "/assets/icons/android-chrome-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "density": 1.5
    },{
      "src": "/assets/icons/android-chrome-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "density": 2
    },{
      "src": "/assets/icons/android-chrome-144x144.png",
      "sizes": "144x144",
